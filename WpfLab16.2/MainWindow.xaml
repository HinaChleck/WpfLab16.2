<Window x:Class="WpfLab16._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLab16._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="1000" Loaded="Window_Loaded">
    <Grid>
        <Canvas VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Ellipse x:Name="ball" Height="15" Canvas.Left="20" StrokeThickness="0" Canvas.Top="169" Width="15" RenderTransformOrigin="0.269,0.312">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.2,0.2" RadiusX="0.7" Center="0.5,0.5" RadiusY="0.7">
                        <GradientStop Color="#FFD11373" Offset="0.485"/>
                        <GradientStop Color="White" Offset="0"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
              </Ellipse>

        </Canvas>
    </Grid>
</Window>
